<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="304.0" prefWidth="800.0" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.PersonOverviewController">
    <children>
        <SplitPane dividerPositions="0.4" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <!-- Vasak pool â€“ tabel -->
                <AnchorPane>
                    <children>
                        <TableView fx:id="personTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="firstNameColumn" text="First name" />
                                <TableColumn fx:id="lastNameColumn" text="Last name" />
                                <TableColumn fx:id="emailColumn" text="Email" />
                                <TableColumn fx:id="phoneColumn" text="Phone" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>

                <!-- Parem pool â€“ detailid -->
                <AnchorPane styleClass="background">
                    <children>
                        <Label styleClass="label-header" text="Person Details" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0" />
                        <GridPane layoutX="14.0" layoutY="30.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="60.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" prefWidth="150.0" />
                            </columnConstraints>

                            <!-- iga info rida -->
                            <children>
                                <Label text="First name" GridPane.rowIndex="0" />
                                <Label fx:id="firstNameLabel" styleClass="label-bright" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Last name" GridPane.rowIndex="1" />
                                <Label fx:id="lastNameLabel" styleClass="label-bright" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Street" GridPane.rowIndex="2" />
                                <Label fx:id="streetLabel" styleClass="label-bright" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="City" GridPane.rowIndex="3" />
                                <Label fx:id="cityLabel" styleClass="label-bright" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Label text="Postal Code" GridPane.rowIndex="4" />
                                <Label fx:id="postalCodeLabel" styleClass="label-bright" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                <Label text="Birthday" GridPane.rowIndex="5" />
                                <Label fx:id="birthdayLabel" styleClass="label-bright" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                                <!-- ðŸ”½ Uued vÃ¤ljad -->
                                <Label text="Email" GridPane.rowIndex="6" />
                                <Label fx:id="emailLabel" styleClass="label-bright" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                                <Label text="Phone" GridPane.rowIndex="7" />
                                <Label fx:id="phoneLabel" styleClass="label-bright" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                            </children>
                        </GridPane>

                        <!-- Nupud -->
                        <Button text="New" onAction="#handleNewPerson" AnchorPane.rightAnchor="200.0" AnchorPane.bottomAnchor="10.0" />
                        <Button text="Edit" onAction="#handleEditPerson" AnchorPane.rightAnchor="110.0" AnchorPane.bottomAnchor="10.0" />
                        <Button text="Delete" onAction="#handleDeletePerson" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="10.0" />
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
